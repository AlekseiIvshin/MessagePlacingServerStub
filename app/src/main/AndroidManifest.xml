<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.eficksan.messaging">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.eficksan.messaging.presentation.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <receiver
            android:name=".data.BootCompletedReceiver"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
                <action android:name="android.intent.action.QUICKBOOT_POWERON" />
            </intent-filter>
        </receiver>

        <service
            android:name="com.eficksan.messaging.data.StubLocationService"
            android:enabled="true"
            android:exported="true" >
            <intent-filter>
                <action android:name="com.eficksan.messaging.BIND_LOCATIONS"/>
            </intent-filter>
        </service>
        <service
            android:name="com.eficksan.messaging.data.StubMessagingService"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <action android:name="com.eficksan.messaging.BIND_PLACING_MESSAGE"/>
            </intent-filter>
        </service>
    </application>

</manifest>